{
  "root": true,
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [{
    "files": ["public/js/*.js"],
    "env": {
      "browser": true,
      "jquery": true
    }
  }]
}
